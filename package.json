{
  "name": "iobroker.g-homa",
  "version": "0.4.0",
  "description": "ioBroker adapter to control G-Homa WiFi plugs",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "contributors": [],
  "homepage": "https://github.com/AlCalzone/ioBroker.g-homa",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "g-homa",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.g-homa"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^1.0.3",
    "g-homa": "^1.1.3",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.39",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.10",
    "ts-node": "^4.1.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf ./build",
    "watch": "tsc --watch",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "test:js": "node node_modules/mocha/bin/mocha test/test*.js --exit",
    "test:ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts --exit",
    "test:package": "node node_modules/mocha/bin/mocha test/testPackageFiles.js --exit",
    "test": "npm run test:ts && npm run test:js",
    "prepublishOnly": "npm run test:package",
    "coverage": "node node_modules/nyc/bin/nyc npm run test"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.g-homa/issues"
  },
  "readmeFilename": "README.md",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
