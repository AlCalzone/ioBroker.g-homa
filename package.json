{
  "name": "iobroker.g-homa",
  "version": "0.5.2",
  "description": "ioBroker adapter to control G-Homa WiFi plugs",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "contributors": [],
  "homepage": "https://github.com/AlCalzone/ioBroker.g-homa",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "g-homa",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlCalzone/ioBroker.g-homa"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.4.0",
    "g-homa": "^1.2.1",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^1.3.1",
    "@iobroker/testing": "^2.2.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf ./build",
    "watch": "tsc --watch",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "test:ts": "node node_modules/mocha/bin/mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts --exit",
    "test:unit": "node_modules/.bin/mocha test/unit --exit",
    "test:package": "node_modules/.bin/mocha test/package --exit",
    "test:integration": "node_modules/.bin/mocha test/integration --exit",
    "test": "npm run test:ts",
    "coverage": "node node_modules/nyc/bin/nyc npm run test",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/ioBroker.g-homa/issues"
  },
  "readmeFilename": "README.md",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
